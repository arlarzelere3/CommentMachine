<h3>Record {{ id }}</h3>
<div class="small-6 columns">
	<table>
		<tr>
			<td>Title</td>
			<td>{{ title }}</td>
		</tr>
		<tr>
			<td>Value</td>
			<td>{{ value }}</td>
		</tr>
		<tr>
			<td>Comments</td>
			<td>
				{{#if this.comments}}
					{{this.comments.length}}
				{{else}}
					None
				{{/if}}
			</td>
		</tr>
	</table>
</div>
<div class="small-6 columns">
	{{#each comment in this.comments}}
		{{ comment.id }}
		<h5>Author: {{ comment.author.name }}</h5>
		<p>Text: {{ comment.text }}</p>
	{{/each}}
</div>
