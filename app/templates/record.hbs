<h3>Record {{ id }}</h3>
<div class="small-6 columns">
	<table>
		<tr>
			<td>Title</td>
			<td>{{ title }}</td>
		</tr>
		<tr>
			<td>Value</td>
			<td>{{ value }}</td>
		</tr>
	</table>
</div>
<div class="small-6 columns">
	{{#each comment in this.comments}}
		<!--<h5>Author: {{#linkTo "user" this}}{{ comment.user.name }}{{/linkTo}}</h5>-->
		<p>
			Text: <span>{{ comment.text }}</span>
		</p>
	{{ else }}
		<h5>No Comments </h5>
	{{/each}}
	{{view Ember.TextField id="new-comment" placeholder="Please enter a new comment" valueBinding="newComment" action="createComment"}}
</div>
